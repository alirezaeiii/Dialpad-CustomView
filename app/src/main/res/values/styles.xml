<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DialpadKeyNumberStyle">
        <item name="android:textColor">@color/dialpad_primary_text_color</item>
        <item name="android:textSize">@dimen/dialpad_key_numbers_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_key_number_margin_bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialpadKeyLettersStyle">
        <item name="android:textColor">@color/dialpad_secondary_text_color</item>
        <item name="android:textSize">@dimen/dialpad_key_letters_size</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PadButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_marginStart">8dip</item>
        <item name="android:layout_marginEnd">8dip</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PadButtonStyle.Circle">
        <item name="android:background">@drawable/circular_selector</item>
    </style>

    <style name="PadButtonStyle.Ripple">
        <item name="android:background">@drawable/unbounded_selector</item>
    </style>

    <style name="PadButtonStyle.Animation">
        <item name="android:background">@drawable/unbounded_selector_radius</item>
    </style>

    <style name="PadButtonStyle.Border">
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">@drawable/rectangle_selector</item>
    </style>

    <style name="PadLayoutStyle">
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingStart">24dip</item>
        <item name="android:paddingEnd">24dip</item>
    </style>

    <style name="DisplayEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
    </style>

    <style name="DisplayEditTextStyle.Formula">
        <item name="android:paddingTop">48dip</item>
        <item name="android:paddingBottom">24dip</item>
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
    </style>

</resources>
